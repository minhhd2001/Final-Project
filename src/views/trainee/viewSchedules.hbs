<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Schedule</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/sideBar.css">
    <style>
        .form-search:focus,
        .btn-search:focus,
        .btn-search:active:focus {
            box-shadow: none;
        }
    </style>
</head>

<body>
    {{> header}}
    <div class="wrapper">
        {{> sidebarTrainee}}
        <div class="main_content">
            <div class="container">
                <h1 class="text-center">Course {{course.name}}</h1>
                <div class="d-flex justify-content-between my-3">
                    <div>
                        <form class="d-flex input-group" method="get"
                            action="/trainee/viewSchedules/{{course._id}}/search">
                            <input class="form-control form-search" type="text" name="search" id="search"
                                placeholder="Search schedules">
                            <button type="submit" class="btn btn-primary btn-search">Search</button>
                        </form>
                    </div>
                </div>
                {{#if messageError}}
                <div class="alert alert-danger">{{messageError}}</div>
                {{/if}}
                <table class="table table-hover">
                    <thead class="bg-warning">
                        <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Date</th>
                            <th scope="col">Slot</th>
                            <th scope="col">Attendance</th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#if schedules}}
                        {{#each schedules}}
                        <tr>
                            <th>{{sum @index}}</th>
                            <td>{{this.time}}</td>
                            <td>{{this.slot}}</td>
                            <td>
                                {{#if (isTrue this.attendance)}} <p style="color: rgb(95, 240, 95);">Present</p> {{/if}}
                                {{#if (isFalse this.attendance)}} <p style="color: red;">Absent</p> {{/if}}
                                {{#if (isNull this.attendance)}} <p style="color: gray;">Not Yet</p> {{/if}}
                            </td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="4" class="text-center">You don't have a schedule yet.</td>
                        </tr>
                        {{/each}}
                        {{else}}
                        {{#if schedule}}
                        <tr>
                            <th>1</th>
                            <td>{{schedule.time}}</td>
                            <td>{{schedule.slot}}</td>
                            <td>{{schedule.course}}</td>
                            <td>
                            <td>
                                {{#if (isTrue schedule.attendance)}} <p style="color: rgb(95, 240, 95);">Present</p> {{/if}}
                                {{#if (isFalse schedule.attendance)}} <p style="color: red;">Absent</p> {{/if}}
                                {{#if (isNull schedule.attendance)}} <p style="color: gray;">Not Yet</p> {{/if}}
                            </td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan='6' class='text-center'>Can't find this schedule</td>
                        </tr>
                        {{/if}}
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {{> footer}}

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
        crossorigin="anonymous"></script>
</body>

</html>